<div class="container my-5 p-5 bg-light rounded w-75">
  <div class="letters d-flex justify-content-center flex-column align-items-center">
    <h1 class="text-header text-center p-3">Your Result</h1>
    <div class="row justify-content-center">
      <div class="col-auto">
        <h3 class="text-dark bg-info py-3 px-3 m-1 d-flex justify-content-center align-items-center" style="min-width: 200px;">
          <%= @message %>
        </h3>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-auto">
        <h2 class="text-success">
          <%= @result %>
        </h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <%= link_to "Play Again", new_path, class: "p-2 btn btn-dark text-info fw-bold fs-4" %>
      </div>
    </div>
  </div>
</div>
